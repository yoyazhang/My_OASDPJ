<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
            <taglib-location>/WEB-INF/fmt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fmt-rt</taglib-uri>
            <taglib-location>/WEB-INF/fmt-1_0-rt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/c.tld</taglib-location>
        </taglib>
    </jsp-config>
    <filter>
        <filter-name>checkLogin</filter-name>
        <filter-class>Filter.CheckLogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>checkLogin</filter-name>
        <url-pattern>/jspFiles/admin/*</url-pattern>
        <url-pattern>/upload</url-pattern>
        <url-pattern>/myFriends</url-pattern>
        <url-pattern>/handleLike</url-pattern>
        <url-pattern>/myPhoto</url-pattern>
        <url-pattern>/showFavor</url-pattern>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>unmatchedCheck</filter-name>
        <filter-class>Filter.UnMatchedUidFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>unmatchedCheck</filter-name>
        <url-pattern>/upload</url-pattern>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>showFavorCheck</filter-name>
        <filter-class>Filter.ShowFavorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>showFavorCheck</filter-name>
        <url-pattern>/showFavor</url-pattern>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
</web-app>